<div class="container col-12">
    <div id="page-content">
        <h1 class="text-center mt=4"> Bloggers </h1>
        <div class="card-columns" id="articles">
            <% @users.each do |user|%>
                <div class="card text-center p-3">
                    <div class="card-body">
                        <h5 class="card-title"> <%= link_to user.username, user_path(user), class:"text-muted" %></h5>
                        <%= link_to 'View this profile', user_path(user), class:"btn btn-outline-info" %>
                        <%= link_to 'Edit this profile', edit_user_path(user), class:"btn btn-outline-success" %>
                        <%= link_to 'Delete this profile', user_path(user), method: :delete, data: {confirm: "Are you sure?"} , class:"btn btn-outline-danger" %>
                        <p class="card-text">
                            <small class="text-muted"> Created <%=time_ago_in_words(user.created_at)%> ago & updated <%=time_ago_in_words(user.created_at)%> ago</small>
                        </p>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
