<div class="container col-12">
    <div id="page-content">
        <h1 class="text-center mt=4"> Categories </h1>

        <div class="apple_pagination">
            <%= will_paginate @categories, :container => false %>
        </div>
        
      
    <div class="card-columns" id="articles">
        <% @categories.each do |category|%>
            <div class="card text-center p-3">
                <div class="card-body">
                    <h5 class="card-title"> <%= link_to category.name, category_path(category), class:"text-muted" %></h5>

                    <%= link_to 'Read the articles in this category', category_path(category), class:"btn btn-outline-info" %>
                    <% if logged_in? && current_user.admin? %>
                        <%= link_to 'Edit this Category', edit_category_path(category), class:"btn btn-outline-success" %>
                        <%= link_to 'Delete this Category', category_path(category), method: :delete, data: {confirm: "Are you sure?"} , class:"btn btn-outline-danger" %>
                    <% end %>
                </div>
            </div>
        <% end %>
    </div>

    </div>
</div>
